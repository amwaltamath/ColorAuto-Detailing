---
import '../styles/global.css';
import { ChatWidget } from '../components/features/ChatWidget';

interface Props {
  title: string;
  description?: string;
  keywords?: string[];
  canonical?: string;
  image?: string;
  noindex?: boolean;
}

const GTM_ID = import.meta.env.PUBLIC_GTM_ID || 'GTM-PMBBJ2B6';
const GA_ID = import.meta.env.PUBLIC_GA_ID;
const GOOGLE_SITE_VERIFICATION = import.meta.env.PUBLIC_GOOGLE_SITE_VERIFICATION;
const { title, description, keywords = [], canonical, image, noindex = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description || "ColorAuto Detailing — Auto detailing, paint protection film, ceramic coating, and window tinting in Grand Junction, CO."} />
    {keywords.length ? (
      <meta name="keywords" content={keywords.join(', ')} />
    ) : null}
    {noindex ? (<meta name="robots" content="noindex,nofollow" />) : (<meta name="robots" content="index,follow" />)}
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/images/ColorAuto.png" />
    <meta name="generator" content={Astro.generator} />
    {GOOGLE_SITE_VERIFICATION && (<meta name="google-site-verification" content={GOOGLE_SITE_VERIFICATION} />)}
    {canonical && (<link rel="canonical" href={canonical} />)}

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description || "ColorAuto Detailing — Auto detailing, paint protection film, ceramic coating, and window tinting in Grand Junction, CO."} />
    {canonical && (<meta property="og:url" content={canonical} />)}
    <meta property="og:type" content="website" />
    {image && (<meta property="og:image" content={image} />)}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description || "ColorAuto Detailing — Auto detailing, paint protection film, ceramic coating, and window tinting in Grand Junction, CO."} />
    {image && (<meta name="twitter:image" content={image} />)}
    {GTM_ID && (
      <script define:vars={{ GTM_ID }}>
        {`(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
        new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
        'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer',GTM_ID);`}
      </script>
    )}
    
    <!-- Facebook Pixel Code -->
    <script>
      !function(f,b,e,v,n,t,s)
      {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
      n.callMethod.apply(n,arguments):n.queue.push(arguments)};
      if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
      n.queue=[];t=b.createElement(e);t.async=!0;
      t.src=v;s=b.getElementsByTagName(e)[0];
      s.parentNode.insertBefore(t,s)}(window, document,'script',
      'https://connect.facebook.net/en_US/fbevents.js');
      fbq('init', '667170362973392');
      fbq('track', 'PageView');
    </script>
    <noscript>
      <img height="1" width="1" style="display:none" 
           src="https://www.facebook.com/tr?id=667170362973392&ev=PageView&noscript=1"/>
    </noscript>
    <!-- End Facebook Pixel Code -->
    
    {/* Google Analytics 4 */}
    {GA_ID && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script>
        <script define:vars={{ GA_ID }}>
          {`window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', GA_ID);`}
        </script>
      </>
    )}
    
    <title>{title}</title>
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        name: "ColorAuto Detailing",
        telephone: "970-628-1505",
        address: {
          "@type": "PostalAddress",
          streetAddress: "562 S Westgate Drive",
          addressLocality: "Grand Junction",
          addressRegion: "CO",
          postalCode: "81505",
          addressCountry: "US"
        }
      })}
    </script>
  </head>
  <body>
    {GTM_ID && (
      <noscript>
        <iframe src={`https://www.googletagmanager.com/ns.html?id=${GTM_ID}`} height="0" width="0" style="display:none;visibility:hidden"></iframe>
      </noscript>
    )}
    <slot />
    <ChatWidget client:load />
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: #f3f4f6;
  }
</style>
