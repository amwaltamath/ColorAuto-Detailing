      },
    };

    const defaultImage = '/images/colorppf/GTI_Front_Hero_Gloss_Grey_Black.avif';

    document.addEventListener('DOMContentLoaded', () => {
      const vehicleInputs = document.querySelectorAll('.color-picker input[name="vehicle"]');
      const colorInputs = document.querySelectorAll('.color-picker input[name="color"]');
      const vehicleImage = document.getElementById('vehicle-image');
      const colorName = document.getElementById('selected-color');

      function updateImageAndColor() {
        const selectedVehicle = document.querySelector('.color-picker input[name="vehicle"]:checked')?.value || 'sedan';
        const selectedColor = document.querySelector('.color-picker input[name="color"]:checked')?.value || 'green';
        const colorNameText = document.querySelector('.color-picker input[name="color"]:checked')?.dataset.colorName || 'Moss Green';

        vehicleImage.classList.add('loading');
        vehicleImage.src = (imageMap[selectedVehicle] && imageMap[selectedVehicle][selectedColor]) || defaultImage;
        vehicleImage.onload = () => vehicleImage.classList.remove('loading');
        colorName.textContent = colorNameText;
      }

      vehicleInputs.forEach((input) => input.addEventListener('change', updateImageAndColor));
      colorInputs.forEach((input) => input.addEventListener('change', updateImageAndColor));

      updateImageAndColor();
    });
  </script>

