  <style>
    .color-picker { padding: 40px 0; background: #ffffff; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; }
    .color-picker .container { max-width: 1200px; margin: 0 auto; display: flex; gap: 40px; flex-wrap: wrap; align-items: flex-start; padding: 0 20px; }
    .color-picker .image-container { flex: 1; min-width: 300px; text-align: center; }
    .color-picker .image-container img { width: 100%; max-width: 450px; height: auto; border-radius: 10px; box-shadow: 0 4px 10px rgba(0,0,0,0.1); transition: opacity 0.3s ease; }
    .color-picker .image-container img.loading { opacity: 0.5; }
    .color-picker .disclaimer { font-size: 14px; color: #666; margin: 10px 0 20px; }
    .color-picker .vehicle-options { display: flex; gap: 20px; justify-content: center; margin-top: 20px; }
    .color-picker .vehicle-options label { font-size: 16px; color: #333; cursor: pointer; transition: color 0.3s ease; }
    .color-picker .vehicle-options span { padding: 5px 10px; }
    .color-picker .vehicle-options input:checked + span { color: #7c3aed; font-weight: bold; border-bottom: 2px solid #7c3aed; }
    .color-picker .content-container { flex: 1; min-width: 300px; }
    .color-picker .content-container h3 { font-size: 32px; margin-bottom: 15px; color: #111; }
    .color-picker .content-container p { font-size: 18px; margin-bottom: 20px; color: #444; }
    .color-picker .color-name { font-weight: 600; font-size: 18px; margin-bottom: 20px; color: #111; }
    .color-picker .color-options { display: flex; flex-wrap: wrap; gap: 15px; }
    .color-picker .color-swatch { width: 60px; height: 60px; border-radius: 50%; cursor: pointer; border: 3px solid transparent; position: relative; transition: border 0.3s ease; }
    .color-picker .color-swatch input { display: none; }
    .color-picker .color-swatch input:checked + .swatch { outline: 3px solid #7c3aed; }
    .color-picker .swatch { width: 100%; height: 100%; border-radius: 50%; box-shadow: 0 3px 8px rgba(0,0,0,0.2); transition: transform 0.3s ease; }
    .color-picker .color-swatch:hover .swatch { transform: scale(1.08); }
    @media (max-width: 768px) {
      .color-picker .container { flex-direction: column; align-items: center; gap: 30px; }
      .color-picker .image-container, .color-picker .content-container { min-width: 100%; }
      .color-picker .vehicle-options { flex-direction: column; align-items: center; }
      .color-picker .vehicle-options label { font-size: 14px; }
      .color-picker .color-swatch { width: 50px; height: 50px; }
    }
  </style>

